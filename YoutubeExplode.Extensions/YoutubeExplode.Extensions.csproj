<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.0.2</Version>
    <TargetFrameworks>net461;netstandard2.0;netstandard2.1</TargetFrameworks>
    <Description>Some extension methods for YoutubeExplode (IStreamInfo) which decodes the 'n' parameter from the Url to fix slow download.</Description>
    <Nullable>enable</Nullable>
    <LangVersion>10</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Flurl" Version="3.0.7" />
    <PackageReference Include="Jurassic" Version="3.2.4" />
    <PackageReference Include="Stef.Validation" Version="0.1.1" />
    <PackageReference Include="ExposedObject" Version="2.1.0" />
    <PackageReference Include="YoutubeExplode" Version="6.3.7" />
  </ItemGroup>

</Project>